<% const extraStyles = ['https://unpkg.com/leaflet@1.9.4/dist/leaflet.css']; %>
<%- include('partials/header', { pageTitle, theme, extraStyles }) %>
<%- include('partials/nav') %>
<main id="main" class="layout layout--home">
  <section class="hero">
    <div class="hero-image">
      <img src="/images/hopeturtles-floating-1000px.webp" alt="Illustration of a Hope Turtle floating in the ocean" loading="lazy" />
    </div>
    <div class="hero-metrics">
      <div class="metric-card">
        <span class="metric-value"><%= summary.missions %></span>
        <span class="metric-label"><%= t.metric_missions || 'Missions' %></span>
      </div>
      <div class="metric-card">
        <span class="metric-value"><%= summary.turtles %></span>
        <span class="metric-label"><%= t.metric_turtles || 'Hope Turtles' %></span>
      </div>
      <div class="metric-card">
        <span class="metric-value"><%= summary.successes %></span>
        <span class="metric-label"><%= t.metric_success || 'Successful Landfalls' %></span>
      </div>
    </div>
  </section>

  <section class="landing-intro">
    <div class="landing-intro__content">
      <h1><%= t.landing_welcome_title %></h1>
      <p><%= t.landing_intro_paragraph1 %></p>
      <p><%= t.landing_intro_paragraph2 %></p>
    </div>
  </section>

  <section class="panel contribute-panel" id="contribute">
    <header class="panel-header">
      <div>
        <h2>Contribute & Collaborate</h2>
        <p class="panel-subtitle">
          The HopeTurtle project is 100% open source and collaboration powered!  You can get involved in a bunch of ways.
        </p>
      </div>
    </header>
    <div class="contribute-panel__grid">
      <% const contributeButtons = [
        { title: 'Code', subtitle: 'Help develop our turtle python code on Github' },
        { title: 'Build', subtitle: 'Assemble the hardware for a Hope Turtle' },
        { title: 'Bottle', subtitle: 'Send in food filled aid bottles to our coordination hubs' },
        { title: 'Commission', subtitle: 'Commission the deployment of a HopeTurtle and become its captain' },
        { title: 'Deploy', subtitle: 'Help deploy a hub or boat that can receive and release Hope Turtles' },
        { title: 'Buy', subtitle: 'Purchase food orders for our hubs to fill aid bottles' }
      ]; %>
      <% contributeButtons.forEach(function (button) { %>
        <button
          type="button"
          class="contribute-panel__button"
          data-contribute-action="<%= button.title %>"
        >
          <span class="contribute-panel__title"><%= button.title %></span>
          <span class="contribute-panel__subtitle"><%= button.subtitle %></span>
        </button>
      <% }) %>
    </div>
  </section>
</main>
<% const pageScripts = [
  'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js',
  '/js/home.js'
]; %>
<%- include('partials/footer', { pageScripts }) %>

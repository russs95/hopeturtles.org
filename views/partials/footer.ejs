    <footer id="contact" class="site-footer">
      <div class="footer-grid">
        <div>
          <h3>Contact</h3>
          <p>
            <a href="mailto:go@hopeturtles.org">go@hopeturtles.org</a><br />
            <span>A last mile, ecological, decentralized and open source pathway to connect humans to humans in moments of need.</span>
          </p>
        </div>
        <div>
          <h3>Network</h3>
          <ul>
            <li><a href="https://earthen.io" target="_blank" rel="noreferrer">Earthen.io</a></li>
            <li><a href="https://github.com/hopeturtles" target="_blank" rel="noreferrer">GitHub</a></li>
            <li><a href="https://ecobricks.org/en/ecojoiners.php" target="_blank" rel="noreferrer">Ecojoiners</a></li>
            <li><a href="https://mapim.org.my/" target="_blank" rel="noreferrer">MAPIM</a></li>
            <li><a href="https://ecobricks.org" target="_blank" rel="noreferrer">Global Ecobrick Alliance</a></li>
          </ul>
        </div>
        <div>
          <h3>Credits</h3>
          <p>Made with Regenerative Intent by the Human2Human project.</p>
          <% if (includeWebsiteCarbon) { %>
            <div id="wcb" class="carbonbadge<%= theme === 'dark' ? ' wcb-d' : '' %>"></div>
            <script src="https://unpkg.com/website-carbon-badges@1.1.3/b.min.js" defer></script>
          <% } %>
        </div>
        <% if (currentUser) {
             const accountName =
               currentUser.name ||
               currentUser.firstName ||
               (currentUser.email ? currentUser.email.split('@')[0] : null) ||
               'Unknown user';
             const accountRole = currentUser.role || 'user';
             const accountLastLogin = currentUser.lastLogin
               ? new Date(currentUser.lastLogin).toLocaleString('en-US', {
                   dateStyle: 'medium',
                   timeStyle: 'short'
                 })
               : 'Never';
        %>
          <div class="footer-account">
            <h3>Account</h3>
            <dl class="footer-account__meta">
              <div>
                <dt>Name</dt>
                <dd><%= accountName %></dd>
              </div>
              <div>
                <dt>Role</dt>
                <dd class="footer-account__role"><%= accountRole %></dd>
              </div>
              <div>
                <dt>Last logged in</dt>
                <dd><%= accountLastLogin %></dd>
              </div>
            </dl>
            <a class="button ghost" href="/auth/logout">Logout</a>
          </div>
        <% } %>
      </div>
      <p class="footer-meta">© <%= new Date().getFullYear() %> HopeTurtles.org · Ocean currents of care</p>
    </footer>
    <script src="/js/main.js" type="module"></script>
    <% if (typeof pageScripts !== 'undefined') { %>
      <% pageScripts.forEach(function (script) { %>
        <script src="<%= script %>"></script>
      <% }); %>
    <% } %>
  </body>
</html>

<% const pageScripts = ['/js/about.js']; %>
<%- include('partials/header', { pageTitle, theme, lang, direction }) %>
<%- include('partials/nav') %>
<% const metrics = aboutMetrics || {}; %>
<main id="main" class="about-page layout">
  <section class="about-hero">
    <div class="about-hero__body">
      <div class="about-hero__heading">
        <h1><%= t.about_heading || 'About the Hope Turtle Project' %></h1>
        <p class="about-hero__subheading"><%= t.about_subheading || '- A human to human intention' %></p>
      </div>
      <div class="about-metrics" aria-label="Hope Turtle platform metrics">
        <article class="metric-card about-metric">
          <span class="metric-label"><%= t.metric_turtles || 'Turtles' %></span>
          <span class="metric-value"><%= Number(metrics.turtles || 0).toLocaleString() %></span>
        </article>
        <article class="metric-card about-metric">
          <span class="metric-label"><%= t.about_metric_users || 'Users' %></span>
          <span class="metric-value"><%= Number(metrics.users || 0).toLocaleString() %></span>
        </article>
        <article class="metric-card about-metric">
          <span class="metric-label"><%= t.about_metric_boats || 'Boats' %></span>
          <span class="metric-value"><%= Number(metrics.boats || 0).toLocaleString() %></span>
        </article>
        <article class="metric-card about-metric">
          <span class="metric-label"><%= t.about_metric_hubs || 'Hubs' %></span>
          <span class="metric-value"><%= Number(metrics.hubs || 0).toLocaleString() %></span>
        </article>
      </div>
    </div>
    <div class="about-hero__media">
      <video
        src="/vids/hope-turtle-floating.mp4"
        class="about-hero__video"
        controls
        autoplay
        muted
        playsinline
        aria-label="Hope Turtle gently floating across the ocean"
      ></video>
    </div>
  </section>
  <section class="about-content">
    <p><%= t.about_paragraph1 %></p>
    <p><%= t.about_paragraph2 %></p>
    <p><%= t.about_paragraph3 %></p>
    <p><%= t.about_paragraph4 %></p>
    <p><%= t.about_paragraph5 %></p>
    <div class="about-actions">
      <a
        class="button ghost"
        href="https://github.com/russs95/hopeturtles.org/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <%= t.about_cta_github || 'View the project on GitHub' %>
      </a>
    </div>
  </section>
</main>
<%- include('partials/footer', { pageScripts }) %>

<%- include('partials/header', { pageTitle }) %>
<%- include('partials/nav') %>
<main id="main" class="layout team-page">
  <section class="page-header team-page__intro">
    <h1>Meet the hopeTurtles.org Team</h1>
    <p>
      These are the stewards, technologists, and storytellers who have declared their roles inside the platform.
      Every card below reflects a user with a <code>team_title</code> in their Hope Turtle profile.
    </p>
  </section>

  <% if (!teamMembers.length) { %>
    <p class="empty-state">Our roster is still forming. Check back soon for new crew updates.</p>
  <% } else { %>
    <section class="team-grid" aria-live="polite">
      <% teamMembers.forEach(function(member) { %>
        <article class="team-card">
          <div class="team-card__portrait" aria-hidden="<%= member.photoUrl ? 'false' : 'true' %>">
            <% if (member.photoUrl) { %>
              <img src="<%= member.photoUrl %>" alt="Portrait of <%= member.fullName %>" loading="lazy" />
            <% } else { %>
              <span class="team-card__portrait-placeholder" aria-hidden="true"><%= member.emoji %></span>
            <% } %>
          </div>
          <% if (!member.photoUrl) { %>
            <span class="sr-only">No uploaded portrait for <%= member.fullName %></span>
          <% } %>
          <div class="team-card__details">
            <h2 class="team-card__name"><%= member.fullName %></h2>
            <p class="team-card__title">
              <span class="team-card__title-emoji" aria-hidden="true"><%= member.emoji %></span>
              <span><%= member.title %></span>
            </p>
            <p class="team-card__meta-line">Continent · <strong><%= member.continent %></strong></p>
            <p class="team-card__meta-line">Watershed · <strong><%= member.watershed %></strong></p>
            <% if (member.profileText) { %>
              <p class="team-card__bio"><%= member.profileText %></p>
            <% } %>
          </div>
        </article>
      <% }) %>
    </section>
  <% } %>
</main>
<%- include('partials/footer') %>

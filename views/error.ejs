<%- include('partials/header', { pageTitle: pageTitle || 'Error', theme }) %>
<%- include('partials/nav') %>
<main id="main" class="layout">
  <section class="page-header">
    <h1><%= pageTitle || 'Something went wrong' %></h1>
    <p><%= message || 'An unexpected issue occurred. Please try again shortly.' %></p>
    <% if (showLoginAgain) { %>
      <div class="error-actions">
        <a class="button" href="/auth/login">Login Again</a>
      </div>
    <% } %>
  </section>
</main>
<%- include('partials/footer') %>
